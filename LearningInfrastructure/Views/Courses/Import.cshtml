@{
    ViewData["Title"] = "Імпорт курсів з Excel";
}

<h2>@ViewData["Title"]</h2>

@using (Html.BeginForm("Import", "Courses", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group mt-3">
        <label for="fileExcel">Оберіть файл Excel:</label>
        <input type="file" name="fileExcel" class="form-control" required />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Завантажити</button>
        <a asp-action="Index" asp-controller="Courses" class="btn btn-secondary ms-2">Скасувати</a>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @Html.ValidationSummary()
    </div>
}
